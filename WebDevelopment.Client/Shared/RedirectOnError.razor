@inject NavigationManager NavManager

@code {
	[Parameter] public required string RedirectURL { get; set; }


	protected override void OnAfterRender(bool firstRender)
	{
		if (firstRender)
		{
			NavManager.NavigateTo(RedirectURL, new NavigationOptions
			{
				ForceLoad = true,
				ReplaceHistoryEntry = true
			});
		}
	}
}
