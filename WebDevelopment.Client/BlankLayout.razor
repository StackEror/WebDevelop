@inherits LayoutComponentBase


<html>

<head>
    <title>LogIn</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="login/css/backGround.css">
    <link rel="stylesheet" href="login/css/mainStyle.css">

    <style>
        .container-login {
            /* Pentru latime limitata 
            width: 310px; 
