<PageTitle>Page Not Found</PageTitle>

<div class="not-found-container h-100">
    <div class="not-found-content">
        <div class="error-code">404</div>
        <div class="error-message">
            <h1>"NotFound_Title"</h1>
            <p>"NotFound_SubTitle"</p>
        </div>

        <div class="action-buttons">
            <button class="btn btn-primary" @onclick="GoHome" title="Home">
                <i class="fas fa-home"></i> "Home"]
            </button>
            <button class="btn btn-secondary" @onclick="GoBack" title="Back">
                <i class="fas fa-arrow-left"></i> "Back"
            </button>
        </div>
    </div>
</div>

<style>
    .not-found-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .not-found-content {
        text-align: center;
        max-width: 600px;
        background: white;
        padding: 3rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

        .not-found-content .error-code {
            font-size: 8rem;
            font-weight: 900;
            color: var(--primary);
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            line-height: 1;
        }

        .not-found-content .error-message h1 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .not-found-content .error-message p {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 2rem;
        }

        .not-found-content .suggestions {
            text-align: left;
            margin: 2rem 0;
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid var(--primary);
        }

            .not-found-content .suggestions h3 {
                color: #333;
                margin-bottom: 1rem;
                font-size: 1.3rem;
            }

            .not-found-content .suggestions ul {
                list-style: none;
                padding: 0;
            }

            .not-found-content .suggestions li {
                padding: 0.5rem 0;
                color: #555;
                position: relative;
                padding-left: 1.5rem;
            }

                .not-found-content .suggestions li::before {
                    content: "•";
                    color: var(--primary);
                    font-weight: bold;
                    position: absolute;
                    left: 0;
                }

        .not-found-content .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .not-found-content .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .not-found-content .btn-primary {
            background: var(--primary);
            color: white;
        }

            .not-found-content .btn-primary:hover {
                background: var(--primary);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(108, 99, 255, 0.3);
            }

        .not-found-content .btn-secondary {
            background: #6c757d;
            color: white;
        }

            .not-found-content .btn-secondary:hover {
                background: #5a6268;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
            }

    @@media (max-width: 768px) {
        .not-found-content .error-code {
            font-size: 6rem;
        }

        .not-found-content .error-message h1 {
            font-size: 2rem;
        }

        .not-found-content .not-found-content {
            padding: 2rem;
            margin: 1rem;
        }

        .not-found-content .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .not-found-content .btn {
            width: 100%;
            max-width: 200px;
        }
    }
</style>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
    private string previousUrl = "";

    protected override async Task OnInitializedAsync()
    {
        // Get the previous page from browser history
    }

    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private async void GoBack() => await JSRuntime.InvokeVoidAsync("history.back");
}