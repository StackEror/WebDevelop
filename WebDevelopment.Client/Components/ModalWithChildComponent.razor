<div class="modal-overlay">
    <div class="@($"modal-container {ModalTypeClass}")">
        <div class="modal-header">
            <div class="modal-title">@Title</div>
            <button class="close-btn" @onclick="HandleCloseAsync">×</button>
        </div>
        @if (UseLoading && ShowLoading)
        {
            <Loading />
        }
        <div class="modal-body">
            <div class="modal-content1">
                @ChildContent
            </div>
        </div>
        <div class="modal-footer">
            @if (ShowFooter)
            {
                <button class="modal-button-cancel" disabled="@IsDisabled" @onclick="HandleCancelAsync">@CancelButtonTitle</button>
                <button class="modal-button-confirm" disabled="@IsDisabled" @onclick="HandleConfirmAsync">@ConfirmButtonTitle</button>
            }
        </div>
    </div>
</div>


@code {
    [Parameter] public string Title { get; set; } = "Modal_Title";
    [Parameter] public string Content { get; set; } = "Modal_Content";
    [Parameter] public string ConfirmButtonTitle { get; set; } = "Confirm_Button_Title";
    [Parameter] public string CancelButtonTitle { get; set; } = "Cancel_Button_Title";
    [Parameter] public ModalTypeEnum ModalType { get; set; } = ModalTypeEnum.Default;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool ShowFooter { get; set; } = true;
    [Parameter] public bool UseLoading { get; set; } = false;
    private bool IsDisabled { get; set; } = false;
    private bool IsProcessing { get; set; } = false;
    [Parameter] public bool ShowLoading { get; set; } = false;

    [Parameter] public EventCallback OnConfirm { get; set; }
    private async Task HandleConfirmAsync()
    {
        if (IsProcessing)
            return;

        ShowLoading = true;
        IsProcessing = true;
        IsDisabled = true;
        StateHasChanged();

        try
        {
            await OnConfirm.InvokeAsync();
            await Task.Delay(100);
        }
        finally
        {
            ShowLoading = false;
            IsProcessing = false;
            IsDisabled = false;
        }
    }

    [Parameter] public EventCallback OnClose { get; set; }
    private async Task HandleCloseAsync()
    {
        await OnClose.InvokeAsync();
        IsDisabled = false;
    }
    [Parameter] public EventCallback OnCancel { get; set; }
    private async Task HandleCancelAsync()
    {
        if (OnCancel.HasDelegate)
            await OnCancel.InvokeAsync();
        else
            await OnClose.InvokeAsync();
    }

    public enum ModalTypeEnum
    {
        Default = 0, // modal--default
        Primary = 1, // modal--primary
        Warning = 2, // modal--warning
        Danger = 3, // modal--danger
        Success = 4 // modal--success
    }

    private string ModalTypeClass { get; set; } = "modal--default";

    protected override void OnInitialized()
    {
        ModalTypeClass = ModalType switch
        {
            ModalTypeEnum.Default => "modal--default",
            ModalTypeEnum.Primary => "modal--primary",
            ModalTypeEnum.Warning => "modal--warning",
            ModalTypeEnum.Danger => "modal--danger",
            ModalTypeEnum.Success => "modal--success",
            _ => "modal--default",
        };
    }
}

