
<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .modal-window {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.2);
        display: flex;
        flex-direction: column;
        animation: fadeIn 0.25s ease;
    }

        .modal-window.small {
            width: 300px;
        }

        .modal-window.medium {
            width: 500px;
        }

        .modal-window.large {
            width: 800px;
        }

    .modal-header {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-body {
        padding: 20px;
    }

    .modal-footer {
        padding: 15px;
        border-top: 1px solid #ddd;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .close-btn {
        background: transparent;
        border: none;
        font-size: 18px;
        cursor: pointer;
    }

</style>
@if (IsOpen)
{
    <div class="modal-overlay">
        <div class="modal-window @Size">
            <div class="modal-header">
                <h3>@Title</h3>
                <button class="close-btn" @onclick="OnCancelClicked">✖</button>
            </div>

            <div class="modal-body">
                @ChildContent
            </div>

            <div class="modal-footer">
                @if (ShowCancel)
                {
                    <button class="btn btn-secondary" @onclick="OnCancelClicked">Cancel</button>
                }

                @if (ShowConfirm)
                {
                    <button class="btn btn-primary" @onclick="OnConfirmClicked">Confirm</button>
                }
            </div>
        </div>
    </div>
}

@code {
    // Two-way binding
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    // Modal title
    [Parameter] public string Title { get; set; } = "Modal";

    // Modal size (small, medium, large)
    [Parameter] public string Size { get; set; } = "medium";

    // Buttons
    [Parameter] public bool ShowConfirm { get; set; } = true;
    [Parameter] public bool ShowCancel { get; set; } = true;

    // Confirm + cancel events
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    // Content
    [Parameter] public RenderFragment ChildContent { get; set; }

    private async Task OnConfirmClicked()
    {
        await OnConfirm.InvokeAsync();
        await IsOpenChanged.InvokeAsync(false);
    }

    private async Task OnCancelClicked()
    {
        await OnCancel.InvokeAsync();
        await IsOpenChanged.InvokeAsync(false);
    }
}



