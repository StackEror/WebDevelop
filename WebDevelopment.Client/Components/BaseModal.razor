
<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .modal-window {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.2);
        display: flex;
        flex-direction: column;
    }
    /*
        width: 750px;
        min-width: 280px;
        background: white;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    */

    .modal-window.small {
        width: 400px;
    }

    .modal-window.medium {
        width: 500px;
    }

    .modal-window.large {
        width: 700px;
    }
    .modal-window.extra-large {
        width: 900px;
    }

    .modal-header {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-body {
        padding: 20px;
    }

    .modal-footer {
        padding: 15px;
        border-top: 1px solid #ddd;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .close-btn {
        background: transparent;
        border: none;
        font-size: 18px;
        cursor: pointer;
    }
</style>
<div class="modal-overlay">
    <div class="modal-window @Size">
        <div class="modal-header">
            <h3>@Title</h3>
            <button class="close-btn" @onclick="OnCancelClicked"> <i class="fa-solid fa-xmark"></i></button>
        </div>


        <div class="modal-body">
            @ChildContent
        </div>

        <div class="modal-footer">
            <button class="btn btn-secondary" @onclick="OnCancelClicked">Cancel</button>
            <button class="btn btn-primary" @onclick="OnConfirmClicked">Confirm</button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Modal_Title";

    [Parameter] public string Size { get; set; } = "medium";

    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    private async Task OnConfirmClicked() => await OnConfirm.InvokeAsync();

    private async Task OnCancelClicked() => await OnCancel.InvokeAsync();
}

